
<%= form_for [@category, @product] do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :price %>
<%= f.text_field :price %>

<%= f.label :photo_url %>
<%= f.text_field :photo_url %>

<%= f.label :color%>
<%= f.text_field :color%>

<%=f.submit "UPDATE" %>
<%end %>


<%= form_for [@category, @product], method: :delete do |f| %>
<%= f.submit "DELETE" %>
<%end %>
